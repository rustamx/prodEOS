			ПозицияИЗ = Найти(ТекстЗапроса, "ИЗ");
			ТекстЗапроса = Символы.ПС + "ВЫБРАТЬ РАЗРЕШЕННЫЕ СУММА(1) КАК КОЛИЧЕСТВО" + Символы.ПС + Сред(ТекстЗапроса, ПозицияИЗ);
