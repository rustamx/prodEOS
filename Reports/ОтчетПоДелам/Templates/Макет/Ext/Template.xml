		<dataSource>ИсточникДанных1</dataSource>
		<query>ВЫБРАТЬ
	ДелаХраненияДокументов.Ссылка,
	ДелаХраненияДокументов.ВерсияДанных,
	ДелаХраненияДокументов.ПометкаУдаления,
	ДелаХраненияДокументов.Код,
	ДелаХраненияДокументов.Наименование,
	ДелаХраненияДокументов.ДатаНачала,
	ДелаХраненияДокументов.ДатаОкончания,
	ДелаХраненияДокументов.ДелоЗакрыто,
	ДелаХраненияДокументов.КоличествоЛистов,
	ДелаХраненияДокументов.Комментарий,
	ДелаХраненияДокументов.НоменклатураДел,
	ДелаХраненияДокументов.НомерТома,
	ДелаХраненияДокументов.Организация,
	ДелаХраненияДокументов.Подразделение,
	ВЫБОР
		КОГДА ЕСТЬNULL(СостоянияДелХраненияДокументовСрезПоследних.Состояние, "") = ""
			ТОГДА ДелаХраненияДокументов.МестоХраненияДел
		ИНАЧЕ ""
	КОНЕЦ КАК МестоХраненияДел,
	ДелаХраненияДокументов.Предопределенный,
	ДелаХраненияДокументов.ИмяПредопределенныхДанных,
	ДелаХраненияДокументов.Представление,
	ЕСТЬNULL(СостоянияДелХраненияДокументовСрезПоследних.Состояние, "") КАК Состояние,
	ДелаХраненияДокументов.НоменклатураДел.Индекс КАК ИндексДела
ИЗ
	Справочник.ДелаХраненияДокументов КАК ДелаХраненияДокументов
		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.СостоянияДелХраненияДокументов.СрезПоследних КАК СостоянияДелХраненияДокументовСрезПоследних
		ПО ДелаХраненияДокументов.Ссылка = СостоянияДелХраненияДокументовСрезПоследних.ДелоХраненияДокументов
{ГДЕ
	(ДелаХраненияДокументов.ПометкаУдаления = ЛОЖЬ
			ИЛИ &amp;ПоказыватьПомеченныеНаУдаление = ИСТИНА),
	(ГОД(ДелаХраненияДокументов.ДатаНачала) = &amp;Год),
	(ДелаХраненияДокументов.МестоХраненияДел = ЗНАЧЕНИЕ(Справочник.МестаХраненияДел.ПустаяСсылка)
			ИЛИ &amp;ТолькоБезМестХранения = ЛОЖЬ)}</query>
