		ОписаниеКнопки = НСтр("ru = 'Добавить предупреждающее действие'; en = 'Add preventive action'");
		КнопкаДобавитьСтроку = ра_ОбменДанными.ПолучитьСтруктуруНастроекКнопки(ИмяКнопки, ОписаниеКнопки);
		
		ОбъемРабот = РегистрыСведений.ra_OcenkiZnachimostiNesootvetstvij.ПолучитьОценкуНесоответствия(Несоответствие);
		ЭтоD6 = ОбъемРабот = Перечисления.ra_ObemyRabot.D6;
		ЭтоD3 = ОбъемРабот = Перечисления.ra_ObemyRabot.D3;
		
		КнопкаДобавитьСтроку.Availability = Полномочия.ПервыйЛидер И НЕ РезультатыПроверки.Свойство("ra_OtchetONesootvetstviiCHast3") И НЕ ЭтоD6 И НЕ ЭтоD3;
		КнопкаДобавитьСтроку.Visibility = КнопкаДобавитьСтроку.Availability;
		
		ИмяКнопки = "UploadOtchetONesootvetstviiCHast3";
		ОписаниеКнопки = НСтр("ru = 'Загрузить Отчет (часть 3)'; en = 'Upload Report (part 3)'");
		КнопкаЗагрузитьОтчет3 = ра_ОбменДанными.ПолучитьСтруктуруНастроекКнопки(ИмяКнопки, ОписаниеКнопки);
		КнопкаЗагрузитьОтчет3.Availability = Полномочия.ПервыйЛидер;
		КнопкаЗагрузитьОтчет3.Visibility = КнопкаЗагрузитьОтчет3.Availability;
		
		МассивКнопок.Добавить(КнопкаДобавитьСтроку);
		МассивКнопок.Добавить(КнопкаЗагрузитьОтчет3);
		
