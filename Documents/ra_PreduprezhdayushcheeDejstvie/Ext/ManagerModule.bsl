		ОписаниеКнопки = НСтр("ru = 'Перенаправить'; en = 'Redirect'");
		КнопкаПеренаправить = ра_ОбменДанными.ПолучитьСтруктуруНастроекКнопки(ИмяКнопки, ОписаниеКнопки);
