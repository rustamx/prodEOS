	Форма.УсловноеОформление, НСтр("ru = 'Просрочена (список активных задач)'; en = 'Overdue (list of active tasks)'"));
	ЭлементОтбораДанных = Эл.Отбор.Элементы.Добавить(Тип("ЭлементОтбораКомпоновкиДанных"));
