					URL,
					Лев(СтроковыеФункцииКлиентСервер.ИзвлечьТекстИзHTML(Ответ.ПолучитьТелоКакСтроку()), 5120)),
				Перенаправления);

		КонецЕсли;

		ДобавитьСписокПеренаправленийКИнформацииОбОшибке(
			Результат.ИнформацияОбОшибке,
