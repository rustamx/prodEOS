	ИначеЕсли ТипКонтакта = Тип("СправочникСсылка.Контрагенты") Тогда
		НомерКартинки = 3;
	ИначеЕсли ТипКонтакта = Тип("СправочникСсылка.РолиИсполнителей")
		Или ТипКонтакта = Тип("СправочникСсылка.ПолныеРоли") Тогда
