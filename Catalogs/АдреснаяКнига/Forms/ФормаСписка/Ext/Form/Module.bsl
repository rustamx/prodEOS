	КонецЕсли;
	
	ОписаниеОповещения = 
		Новый ОписаниеОповещения("ДобавитьГруппу_Продолжение", ЭтаФорма);
	
	ПараметрыФормы = Новый Структура;
	ПараметрыФормы.Вставить("Родитель", ТекущийКонтакт);
		
	ОткрытьФорму("Справочник.ЛичныеАдресаты.ФормаОбъекта",
			ПараметрыФормы,
			ЭтаФорма,,,,
			ОписаниеОповещения,
