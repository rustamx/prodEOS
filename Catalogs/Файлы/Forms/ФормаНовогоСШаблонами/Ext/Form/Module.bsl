&НаКлиенте
Процедура Шаблон1Нажатие(Элемент, СтандартнаяОбработка)
	
	СтандартнаяОбработка = Ложь;
	
	Имя = Элемент.Имя;
	Если Найти(Имя, "Шаблон") <> 0 Тогда
		
		НомерСтрока = Сред(Имя, СтрДлина("Шаблон") + 1);
		Номер = Число(НомерСтрока) - 1;
		
		Если Номер < Шаблоны.Количество() Тогда
			ШаблонСтрока = Шаблоны[Номер];
			Закрыть(ШаблонСтрока.Значение);
		КонецЕсли;
		
	КонецЕсли;	
	
КонецПроцедуры

