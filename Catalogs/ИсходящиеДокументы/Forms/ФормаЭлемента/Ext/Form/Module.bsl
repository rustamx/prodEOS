// Ставит доступность полям, уже заполненным в шаблоне.
&НаСервере
Процедура УстановитьДоступностьПоЗапрету()
	
	Если Не ЗначениеЗаполнено(Объект.Шаблон) Или РольДоступна("ПолныеПрава") Тогда 
		Возврат;
	КонецЕсли;	
	
	УстановитьПривилегированныйРежим(Истина);
	Шаблон = Объект.Шаблон;
	
	ЗапретитьИзменятьРеквизитыИзШаблона = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(
		Объект.Шаблон, "ЗапретитьИзменятьРеквизитыИзШаблона");
		
	Если ЗапретитьИзменятьРеквизитыИзШаблона = Ложь Тогда
		Возврат;
	КонецЕсли;
	
	ИменаРеквизитов = "ВидДокумента, Организация, ГрифДоступа, ВопросДеятельности, Ответственный, НоменклатураДел, Подписал, Проект, Получатели";
	
	РеквизитыШаблона = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(
		Объект.Шаблон, ИменаРеквизитов);
	РеквизитыШаблона.Получатели = РеквизитыШаблона.Получатели.Выгрузить();		
		
	Для Каждого Пара Из РеквизитыШаблона Цикл
			
		ИмяРеквизита = Пара.Ключ;
		
		Если ЗначениеЗаполнено(РеквизитыШаблона[ИмяРеквизита]) Тогда
			НайденныйЭлемент = Элементы.Найти(ИмяРеквизита);
			Если НайденныйЭлемент <> Неопределено Тогда
				НайденныйЭлемент.ТолькоПросмотр = Истина;
				
				Если ИмяРеквизита = "Подразделение" Тогда 
					НельзяМенятьПодразделение = Истина; 
				КонецЕсли;
				
			КонецЕсли;	
		КонецЕсли;
		
	КонецЦикла;	
	
	ЕстьЗаполненныеПолучатели = Ложь;
	Для Каждого Строка Из РеквизитыШаблона.Получатели Цикл
		Если ЗначениеЗаполнено(Строка.Получатель) Или ЗначениеЗаполнено(Строка.Адресат) Тогда
			ЕстьЗаполненныеПолучатели = Истина;
		КонецЕсли;	
	КонецЦикла;	
	
	Если ЕстьЗаполненныеПолучатели Тогда
		Элементы.Получатели.ТолькоПросмотр = Истина;
		Элементы.Получатель.ТолькоПросмотр = Истина;
		Элементы.Адресат.ТолькоПросмотр = Истина;
		Элементы.МногоПолучателей.Доступность = Ложь;
		Элементы.ПолучателиОдинПолучатель.Доступность = Ложь;
	Иначе	
		Элементы.Получатели.ТолькоПросмотр = Ложь;
		Элементы.Получатель.ТолькоПросмотр = Ложь;
		Элементы.Адресат.ТолькоПросмотр = Ложь;
		Элементы.МногоПолучателей.Доступность = Истина;
		Элементы.ПолучателиОдинПолучатель.Доступность = Истина;
	КонецЕсли;
	
КонецПроцедуры		

