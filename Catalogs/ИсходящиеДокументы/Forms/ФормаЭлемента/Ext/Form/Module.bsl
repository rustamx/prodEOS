	СтандартнаяОбработка = Ложь;
	Если Не ЗначениеЗаполнено(ВыбранноеЗначение) Тогда 
		Возврат;
	КонецЕсли;
	
	ВОтветНа = ВыбранноеЗначение;
	Результат = ОбщегоНазначенияДокументооборотВызовСервера.ЗначенияРеквизитовОбъекта(ВОтветНа,
		"ИсходящаяДата, ИсходящийНомер, Заголовок, Отправитель, Подписал, ВопросДеятельности, Проект");
	
	Если ЗначениеЗаполнено(Результат.ИсходящаяДата) 
		И ЗначениеЗаполнено(Результат.ИсходящийНомер) Тогда
		ВОтветНаСтрока = СтрШаблон(НСтр("ru = 'Исх. № %1 от %2'; en = 'Outg. № %1 of %2'"), 
			Результат.ИсходящийНомер, Формат(Результат.ИсходящаяДата, "ДЛФ=D"));
	Иначе
		ВОтветНаСтрока = Результат.Заголовок;
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(Объект.Проект) И ЗначениеЗаполнено(Результат.Проект) Тогда 
		Объект.Проект = Результат.Проект;
