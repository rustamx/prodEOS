		Объект.ВопросДеятельности = Результат.ВопросДеятельности;
	КонецЕсли;
	
	Если НесколькоПолучателей Тогда 
		МассивСтрок = Объект.Получатели.НайтиСтроки(Новый Структура("Получатель",
			Результат.Отправитель));
		
		Если МассивСтрок.Количество() = 0 Тогда 
			Строка = Объект.Получатели.Добавить();
			
			Если ЗначениеЗаполнено(Результат.Отправитель) И ЗначениеЗаполнено(Результат.Подписал) Тогда
				Строка.Получатель = Результат.Отправитель;
				Строка.Адресат = Результат.Подписал;
			Иначе
				Строка.Получатель = Результат.Отправитель;
				Строка.Адресат = Неопределено;
			КонецЕсли;
		КонецЕсли;
	Иначе 
		Если Не ЗначениеЗаполнено(Получатель) Тогда
			Если ЗначениеЗаполнено(Результат.Отправитель) И ЗначениеЗаполнено(Результат.Подписал) Тогда
				Получатель = Результат.Отправитель;
				Адресат = Результат.Подписал;
			Иначе
				Получатель = Результат.Отправитель;
				Адресат = Неопределено;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	ПредметПереписки = СвязиДокументов.ПолучитьСвязанныйДокумент(ВОтветНа, "ПредметПереписки");
	Элементы.ПредметПереписки.Видимость = ЗначениеЗаполнено(ПредметПереписки);
	Модифицированность = Истина;
	
КонецПроцедуры

